{
  "buildCommand": "cd client && chmod +x build.sh && ./build.sh",
  "outputDirectory": "client/dist",
  "framework": "vite",
  "public": true,
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "routes": [
    {
      "src": "/photos/(.*)",
      "dest": "/photos/$1",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*\\.(png|jpg|jpeg|svg|gif))",
      "dest": "/$1"
    }
  ]
} 